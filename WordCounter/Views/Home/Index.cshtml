<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="~/js/jquery-3.3.1.js"></script>
  </head>
  <body>
    <div class="container">
      <!-- <div class="row"> -->
        <h1>Word Counter</h1>
        <form action="/submit" method="post">
          <div class='col-md-6 form-group'>
            <label for="word-input">Input a Word</label>
            <input name="word-input" type="text" maxlength="20">
          </div>

          <div class='col-md-6 form-group'>
            <label for="list-of-words">Input a Sentence</label>
            <input name="list-of-words" type="text">
          </div>

          <button type='submit' class='btn btn-primary submit-button'>Count!</button>
        </form>

    <div class="results">
      @if (@Model != null)
      {
        @Model;
      }

    </div>

      <!-- End of Row -->
      <!-- </div> -->
      <!-- End of Container -->
    </div>
  </body>
</html>
